<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="provider_name" type="text" required="true" label="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_PROVIDER_NAME" description="COM_LOAN_INVESTMENT_FORM_DESC_INVESTMENTPROVIDER_PROVIDER_NAME" hint="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_PROVIDER_NAME"/>
    <field name="provider_logo" 
			type="hidden"
			label="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_PROVIDER_LOGO" 
			description="COM_LOAN_INVESTMENT_FORM_DESC_INVESTMENTPROVIDER_PROVIDER_LOGO" 
			hint="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_PROVIDER_LOGO"/>
			
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
	<field	name="logo" 
			id="uplogo"  	
			type="FileMultiple" 
			label="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_LOGO" 
			description="COM_LOAN_INVESTMENT_FORM_DESC_INVESTMENTPROVIDER_LOGO" 
			hint="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_LOGO"/>
			
	 <field name="website" 
			type="text"
			label="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_WEBSITE" 
			description="COM_LOAN_INVESTMENT_FORM_DESC_INVESTMENTPROVIDER_WEBSITE" 
			hint="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_WEBSITE"/>
			
	<field name="provider_type" type="list" label="COM_LOAN_INVESTMENT_FORM_LBL_INVESTMENTPROVIDER_TYPE" description="COM_LOAN_INVESTMENT_FORM_DESC_INVESTMENTPROVIDER_TYPE">
			<option value="1">Bank</option>
			<option value="0">Non Bank</option>
	</field>
	
  </fieldset>
  <fieldset name="accesscontrol">
    <field name="asset_id" type="hidden" filter="unset"/>
    <field name="rules" type="rules" label="JFIELD_RULES_LABEL" translate_label="false" filter="rules" validate="rules" class="inputbox" component="com_loan_investment" section="investmentprovider"/>
  </fieldset>
</form>
