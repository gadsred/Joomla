<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_CREATED_BY"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_CREATED_BY"  /> 

       <field name="invoice_id" type="text"
                
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_INVOICE_ID"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_INVOICE_ID" 
                
                
                 /> 

       <field name="date" type="text"
                
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_DATE"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_DATE" 
                
                
                 /> 

       <field name="charges" type="text"
                
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_CHARGES"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_CHARGES" 
                
                
                 /> 

       <field name="payments" type="text"
                
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_PAYMENTS"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_PAYMENTS" 
                
                
                 /> 

       <field name="paid" type="text"
                
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_PAID"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_PAID" 
                
                
                 required="true"  /> 

       <field name="paid_on" type="text"
                
            label="COM_FINANCIAL_FORM_LBL_PASTINVOICE_PAID_ON"
            description="COM_FINANCIAL_FORM_DESC_PASTINVOICE_PAID_ON" 
                
                
                 /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>

	</fieldset>

</form>
